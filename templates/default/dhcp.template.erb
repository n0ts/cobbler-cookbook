# ******************************************************************
# Cobbler managed dhcpd.conf file
#
# generated from cobbler dhcp.conf template ($date)
# Do NOT make changes to /etc/dhcpd.conf. Instead, make your changes
# in /etc/cobbler/dhcp.template, as /etc/dhcpd.conf will be
# overwritten.
#
# ******************************************************************

ddns-update-style interim;

allow booting;
allow bootp;

ignore client-updates;
set vendorclass = option vendor-class-identifier;

option pxe-system-type code 93 = unsigned integer 16;

<% unless node['cobbler']['dhcp']['shared-network'].empty? %>
shared-network <%= node['cobbler']['dhcp']['shared-network'] %> {
<% end %>

<% node['cobbler']['dhcp']['subnet'].each do |subnet, params| -%>
  <% next if subnet.empty? -%>
subnet <%= subnet %> netmask <%= params['netmask'] %> {
    option routers             <%= params['routers'] %>;
    option domain-name-servers <%= params['domain-name-servers'].join(', ') %>;
    option subnet-mask         <%= params['netmask'] %>;
    range dynamic-bootp        <%= params['dynamic-bootp']['from'] %> <%= params['dynamic-bootp']['to'] %>;
    default-lease-time         21600;
    max-lease-time             43200;
    next-server                $next_server;
    class "pxeclients" {
        # match is can't override match.
        <% if node['cobbler']['dhcp']['subnet'].count == 1 -%>
        match if substring (option vendor-class-identifier, 0, 9) = "PXEClient";
        <% else -%>
        #match if substring (option vendor-class-identifier, 0, 9) = "PXEClient";
        <% end -%>
        if option pxe-system-type = 00:02 {
            filename "ia64/elilo.efi";
        } else if option pxe-system-type = 00:06 {
            filename "grub/grub-x86.efi";
        } else if option pxe-system-type = 00:07 {
            filename "grub/grub-x86_64.efi";
        } else {
            filename "pxelinux.0";
        }
    }
}
<% end -%>

<% unless node['cobbler']['dhcp']['shared-network'].empty? %>
}
<% end %>

